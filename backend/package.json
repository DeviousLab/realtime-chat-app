{
  "name": "realtime-chat-app-backend",
  "version": "1.0.0",
  "description": "GraphQL backend for realtime chat app",
  "main": "index.ts",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "nodemon --files src/index.ts",
    "build": "tsc",
    "postinstall": "prisma generate --schema=src/prisma/schema.prisma",
    "start": "node --experimental-specifier-resolution=node dist/index.js"
  },
  "keywords": [
    "graphql",
    "apollo",
    "node",
    "mongodb",
    "prisma",
    "express",
    "realtime",
    "chat",
    "app",
    "backend"
  ],
  "author": "DeviousLab",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.3.1",
    "@graphql-tools/schema": "^9.0.13",
    "@prisma/client": "^4.8.1",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.11.2",
    "lodash.merge": "^4.6.2",
    "next-auth": "^4.18.8",
    "ts-node": "^10.9.1",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/lodash.merge": "^4.6.7",
    "@types/ws": "^8.5.4",
    "prisma": "^4.8.1",
    "typescript": "^4.9.4"
  }
}
